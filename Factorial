def fact(x):
    if x == 0:
        return 1
    return x * fact(x - 1)

def negafact(x):
    if x == 0:
        return 1
    
    return ( x * negafact(x+1) )

x=int( input( "Enter your number: " ) )

if x >= 0:
    print( "The factorial of " + str(x) + " is " + str(fact(x)) + "." )
    
else:
    print("The answer is undefined.")
    #print( "The factorial of " + str(x) + " is " + "-" + str( negafact(x)) + "." )
